<Window x:Class="LumpReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LumpReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black">
    <Grid>
        <DockPanel>
            <Menu Height="21" DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="_Open File" Click="MenuItem_Open" />
                    <MenuItem Header="_Clear" Click="MenuItem_Clear" />
                    <Separator />
                    <MenuItem Header="Open Palette" Click="MenuItem_OpenPalette" />
                    <Separator />
                    <MenuItem Header="_Exit" Click="MenuItem_Exit" />
                </MenuItem>
            </Menu>
            <Image x:Name="imgElem"/>
        </DockPanel>
    </Grid>
</Window>
